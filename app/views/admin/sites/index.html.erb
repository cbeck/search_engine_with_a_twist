<div id="page_menu">
  <% form_tag admin_sites_path, :method => 'get' do %>
    <%= text_field_tag :site_search, params[:site_search] %>
    <%= submit_tag "Search", :name => nil %>
    <%= link_to image_tag("cancel.png", :title=>"Clear Search"), admin_sites_path%>
  <% end %>
  
</div>

<h2>Manage Sites</h2>
<p><%= link_to "Add a Site", new_site_path %></p>

<table id="items">
  <tr>
		<th>URL</th>
		<th>Created</th>
		<th>Submitted By</th>
	</tr>
  <% unless @sites.empty? %>
    <%= render :partial => "/site/site", :collection => @sites %>
   <% else %>
    <tr><td colspan="4">You have no sites in the database.  This may be a serious problem.</td></tr>
   <% end %>
</table>

<br />

<%= will_paginate @sites %>


