<div id="page_menu">
  <% form_tag admin_topics_path, :method => 'get' do %>
    <%= text_field_tag :topic_search, params[:topic_search] %>
    <%= submit_tag "Search", :name => nil %>
    <%= link_to image_tag("cancel.png", :title=>"Clear Search"), admin_topics_path%>
  <% end %>
</div>

<h2>Manage Topics</h2>
<p><%= link_to 'Add a New Topic', new_admin_topic_path %></p>
<table id="items">
  <tr>
		<th>Name</th>
		<th>Hierarchy</th>
	</tr>
  <% unless @topics.empty? %>
    <%= render :partial => "topic", :collection => @topics %>
   <% else %>
    <tr><td colspan="4">You have no Topics in the database.  This may be a serious problem.</td></tr>
   <% end %>
</table>

<br />

<%= will_paginate @topics %>



